<div class='text-center'>
  <h3>Votre to-do list</h3>
  <% @tasks.each do |task| %>
  <hr>
    <li><%= link_to task.name, task_path(task) %></li>
    <li><%= link_to "delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</div>

<hr>

<div class="text-center">
  <%= link_to "create", new_task_path %>
</div>






